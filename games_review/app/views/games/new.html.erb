<h2>Add New Game</h2>

<%= form_for @game do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :genre %>:
  <%= f.text_field :genre %><br />  

  <%= f.label :photo_url %>:
  <%= f.text_field :photo_url %><br />

  <%= f.label :release_date %>:
  <%= f.date_field :release_date %><br />

  <%= f.label :studio %>:
  <%= f.text_field :studio %><br />

  <%= f.label :rating %>:
  <%= f.number_field :rating %><br />

  <%= f.submit %>
<% end %>